
@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>



<div class="row">
    <div class="col-md-6 offset-md-2">
        <h1>Rol Listesi</h1>
    </div>
    <div class="col-md-2">
        <a clas="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="admin">Role Ekle</a>
    </div>
</div>
<div class="row">

    <div class="col-md-8 offset-md-2">

        <div class="col-md-8 offset-md-2">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Rol Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-dark btn-sm" asp-area="admin" asp-controller="roles" asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a>
                                <a class="btn btn-warning btn-sm my-1" asp-area="admin" asp-controller="roles" asp-action="RoleDelete" asp-route-id="@item.Id">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>

